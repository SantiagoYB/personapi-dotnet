@model personapi_dotnet.Models.Entities.Estudio

@{
    ViewData["Title"] = "Crear Estudio";
}

<h2>Crear Estudio</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label for="IdProf">IdProf</label>
        <input type="text" asp-for="IdProf" class="form-control" id="IdProf" required />
        <span asp-validation-for="IdProf" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="CcPer">CcPer</label>
        <input type="text" asp-for="CcPer" class="form-control" id="CcPer" required />
        <span asp-validation-for="CcPer" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="Fecha">Fecha</label>
        <input type="Date" asp-for="Fecha" class="form-control" id="Fecha" required />
        <span asp-validation-for="Fecha" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="Univer">Univer</label>
        <input type="text" asp-for="Univer" class="form-control" id="Univer" required />
        <span asp-validation-for="Univer" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Crear</button>

</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
