@model IEnumerable<personapi_dotnet.Models.Entities.Estudio>

@{
    ViewData["Title"] = "Estudios";
}

<h1>Lista de Estudios</h1>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Id Profesion</th>
            <th>Cedula persona</th>
            <th>Fecha</th>
            <th>Universidad</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var estudio in Model)
        {
            <tr>
                <td>@estudio.IdProf</td>
                <td>@estudio.CcPer</td>
                <td>@estudio.Fecha</td>
                <td>@estudio.Univer</td>
                <td>
                    <a asp-controller="EstudioView" asp-action="Info" asp-route-ccPer="@estudio.CcPer" asp-route-idProf="@estudio.IdProf" class="btn btn-secondary">Info</a>
                    <a asp-controller="EstudioView" asp-action="Edit" asp-route-ccPer="@estudio.CcPer" asp-route-idProf="@estudio.IdProf" class="btn btn-primary">Editar</a>
                    <a asp-controller="EstudioView" asp-action="Delete" asp-route-ccPer="@estudio.CcPer" asp-route-idProf="@estudio.IdProf" class="btn btn-danger">Eliminar</a>
                </td>
             </tr>
        }
     </tbody>
</table>
<a asp-controller="EstudioView" asp-action="Create" class="btn btn-primary">Crear estudio</a>

