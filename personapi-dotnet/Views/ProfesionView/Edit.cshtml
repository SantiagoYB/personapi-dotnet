@model personapi_dotnet.Models.Entities.Profesion

@{
    ViewData["Title"] = "Editar Profesión";
}

<h2>Editar Profesión</h2>

<form asp-action="Edit" method="post">
    <div class="form-group">
        <label for="Id">ID</label>
        <input type="number" asp-for="Id" class="form-control" id="Id" readonly />
        <span asp-validation-for="Id" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="Nom">Nombre</label>
        <input type="text" asp-for="Nom" class="form-control" id="Nom" required />
        <span asp-validation-for="Nom" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="Des">Descripción</label>
        <textarea asp-for="Des" class="form-control" id="Des" required></textarea>
        <span asp-validation-for="Des" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success">Guardar Cambios</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
